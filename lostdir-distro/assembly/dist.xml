
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <moduleSets>
	  <moduleSet>
		  <useAllReactorProjects>true</useAllReactorProjects>
		  <includes>
			  <include>com.github.nicosensei:lostdir-scan</include>
		  </includes>
          <sources>
              <fileSets>
                  <fileSet>
                      <outputDirectory>../lostdir</outputDirectory>
                      <directory>target</directory>
                      <includes>
                          <include>*-standalone.jar</include>
                      </includes>
                  </fileSet>
              </fileSets>
          </sources>
	  </moduleSet>
      <moduleSet>
          <useAllReactorProjects>true</useAllReactorProjects>
          <includes>
              <include>com.github.nicosensei:lostdir-recover</include>
          </includes>
          <sources>
              <fileSets>
                  <fileSet>
                      <outputDirectory>../lostdir</outputDirectory>
                      <directory>target</directory>
                      <includes>
                          <include>*-standalone.jar</include>
                      </includes>
                  </fileSet>
              </fileSets>
          </sources>
      </moduleSet>
	  <moduleSet>
		  <useAllReactorProjects>true</useAllReactorProjects>
		  <includes>
			  <include>com.github.nicosensei:lostdir-elasticsearch</include>
		  </includes>
          <sources>
              <fileSets>
                  <fileSet>
                      <outputDirectory>../lostdir</outputDirectory>
                      <directory>target</directory>
                      <includes>
                          <include>*-standalone.jar</include>
                      </includes>
                  </fileSet>
              </fileSets>
          </sources>
	  </moduleSet>
  </moduleSets>
</assembly>
